{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "bundler",
    "module": "ESNext",
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@mediaserver/core": ["packages/core/src/index.ts"],
      "@mediaserver/core/*": ["packages/core/src/*"],
      "@mediaserver/config": ["packages/config/src/index.ts"],
      "@mediaserver/config/*": ["packages/config/src/*"],
      "@mediaserver/db": ["packages/db/src/index.ts"],
      "@mediaserver/db/*": ["packages/db/src/*"],
      "@mediaserver/privacy": ["packages/privacy/src/index.ts"],
      "@mediaserver/privacy/*": ["packages/privacy/src/*"],
      "@mediaserver/api-client": ["packages/api-client/src/index.ts"],
      "@mediaserver/api-client/*": ["packages/api-client/src/*"],
      "@mediaserver/ui": ["packages/ui/src/index.ts"],
      "@mediaserver/ui/*": ["packages/ui/src/*"],
      "@mediaserver/player": ["packages/player/src/index.ts"],
      "@mediaserver/player/*": ["packages/player/src/*"],
      "@mediaserver/i18n": ["packages/i18n/src/index.ts"],
      "@mediaserver/i18n/*": ["packages/i18n/src/*"],
      "@mediaserver/licensing": ["packages/licensing/src/index.ts"],
      "@mediaserver/licensing/*": ["packages/licensing/src/*"],
      "@mediaserver/scanner": ["packages/scanner/src/index.ts"],
      "@mediaserver/scanner/*": ["packages/scanner/src/*"],
      "@mediaserver/transcoder": ["packages/transcoder/src/index.ts"],
      "@mediaserver/transcoder/*": ["packages/transcoder/src/*"],
      "@mediaserver/images": ["packages/images/src/index.ts"],
      "@mediaserver/images/*": ["packages/images/src/*"],
      "@mediaserver/plugin-tmdb": ["packages/plugin-tmdb/src/index.ts"],
      "@mediaserver/plugin-tmdb/*": ["packages/plugin-tmdb/src/*"],
      "@mediaserver/plugin-tvdb": ["packages/plugin-tvdb/src/index.ts"],
      "@mediaserver/plugin-tvdb/*": ["packages/plugin-tvdb/src/*"],
      "@mediaserver/plugin-trakt": ["packages/plugin-trakt/src/index.ts"],
      "@mediaserver/plugin-trakt/*": ["packages/plugin-trakt/src/*"],
      "@mediaserver/plugin-mdblist": ["packages/plugin-mdblist/src/index.ts"],
      "@mediaserver/plugin-mdblist/*": ["packages/plugin-mdblist/src/*"],
      "@mediaserver/test-utils": ["packages/test-utils/src/index.ts"],
      "@mediaserver/test-utils/*": ["packages/test-utils/src/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}

