{
  "name": "@mediaserver/server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "import": "./dist/main.js"
    },
    "./router": {
      "types": "./dist/routers/app.d.ts",
      "import": "./dist/routers/app.js"
    }
  },
  "scripts": {
    "dev": "bun run --watch src/main.ts",
    "build": "bun build src/main.ts --outdir dist --target bun",
    "start": "bun run dist/main.js",
    "test": "bun test || true",
    "test:watch": "bun test --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts"
  },
  "dependencies": {
    "@hono/trpc-server": "^0.3.0",
    "@libsql/client": "^0.15.15",
    "@mediaserver/config": "workspace:*",
    "@mediaserver/core": "workspace:*",
    "@mediaserver/db": "workspace:*",
    "@mediaserver/privacy": "workspace:*",
    "@node-rs/argon2": "^1.8.0",
    "@trpc/server": "^11.0.0-rc.0",
    "hono": "^4.5.0",
    "pino": "^9.3.0",
    "superjson": "^2.2.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/bun": "^1.1.0",
    "pino-pretty": "^13.1.3",
    "typescript": "^5.4.0"
  }
}
