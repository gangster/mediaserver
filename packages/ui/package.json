{
  "name": "@mediaserver/ui",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "import": "./dist/*.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.lib.json",
    "dev": "tsc -p tsconfig.lib.json --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx"
  },
  "dependencies": {
    "@mediaserver/core": "workspace:*",
    "clsx": "^2.1.0",
    "tailwind-merge": "^2.2.0"
  },
  "peerDependencies": {
    "nativewind": "^4.0.0",
    "react": "^18.2.0",
    "react-native": ">=0.76.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "nativewind": "^4.0.0",
    "react": "^18.2.0",
    "react-native": "0.76.0",
    "typescript": "^5.4.0",
    "vitest": "^2.1.0"
  }
}
